html
    head
        title Profile
        style
            include  ../node_modules/psychic.css/dist/psychic.min.css
    body
        include templates/header.pug

        div.grid(style="margin-top:60px;")
            div.col-2-12
            div.col-8-12
                if(rooms.length == 0)
                    div.text-center
                        h3 no rooms üêí
                        a(href="/room/create") create a room!
                else
                    ul.list
                        for room in rooms
                            li.list-item
                                a(href="/" + room.name)=room.name
                                div.badge.badge-default=room.messages.length
            div.col-2-12

        include templates/footer.pug
